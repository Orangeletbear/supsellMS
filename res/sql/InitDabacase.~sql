--创建永久表空间
CREATE TABLESPACE "SSMSTSPACE" 
    LOGGING 
    DATAFILE 'D:\oracle\oradata\oracle\SSMSTSPACE.ora' SIZE 20M EXTENT 
    MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT  AUTO 

--创建临时表空间    
CREATE 
    TEMPORARY TABLESPACE "SSMSTMPTSPACE" TEMPFILE 
    'D:\oracle\oradata\oracle\FTMPSPACE.ora' SIZE 5M EXTENT MANAGEMENT 
    LOCAL UNIFORM SIZE 2M
    
--创建用户
CREATE USER "SSMSUSER"
IDENTIFIED BY "123456"--指定口令
DEFAULT TABLESPACE "SSMSTSPACE"--分配永久表空间
TEMPORARY TABLESPACE "SSMSTMPTSPACE"--分配临时表空间
QUOTA UNLIMITED ON "SSMSTSPACE";--分配使用表空间的权限

--------------------------------------------------------------------

--创建永久表空间
CREATE TABLESPACE "fairyTSPACE" 
    LOGGING 
    DATAFILE 'D:\oracle\oradata\oracle\fairyTSPACE.ora' SIZE 20M EXTENT 
    MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT  AUTO 

--创建临时表空间    
CREATE 
    TEMPORARY TABLESPACE "fairyTMPTSPACE" TEMPFILE 
    'D:\oracle\oradata\oracle\fairyTMPTSPACE.ora' SIZE 5M EXTENT MANAGEMENT 
    LOCAL UNIFORM SIZE 2M
 
--创建用户
CREATE USER "fairy"
IDENTIFIED BY "123456"--指定口令
DEFAULT TABLESPACE "fairyTSPACE"--分配永久表空间
TEMPORARY TABLESPACE "fairyTMPTSPACE"--分配临时表空间
QUOTA UNLIMITED ON "fairyTSPACE";--分配使用表空间的权限



--这个为必须权限
GRANT RESOURCE TO "fairy";

GRANT CONNECT TO "fairy";

------------------------------------------------------------



--SQL COMMAND
--用户从客户端登录数据库
CONNECT SSMSUSER/123456 @ORACLE;
CONN system/system@ORACLE;

--创建角色
CREATE ROLE "FROLE";
CREATE ROLE "TESTROLE";
--授权
GRANT ALTER ANY TABLE TO "FROLE";
GRANT ALTER ANY TABLE TO "FROLE" WITH ADMIN OPTION;
REVOKE ALTER ANY TABLE FROM "FROLE"; 

--取消权限或角色
REVOKE CONNECT FROM "SSMSUSER";


--这个为必须权限
GRANT RESOURCE TO "SSMSUSER";

GRANT CONNECT TO "SSMSUSER";

--查看系统视图
SELECT * FROM USER_TABLESPACES;
SELECT * FROM USER_OBJECTS;
SELECT * FROM USER_CONSTRAINTS;



